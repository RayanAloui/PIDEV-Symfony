{% extends 'base.html.twig' %}

{% block title %}Edit Reclamation{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Edit Reclamation</h1>
                </div>
                
                <div class="card-body">
                    {{ include('reclamation/_form.html.twig', {'button_label': 'Update'}) }}
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    {{ include('reclamation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize flatpickr for the date field if present
            const dateInput = document.getElementById('reclamation_date');
            if (dateInput) {
                flatpickr(dateInput, {
                    enableTime: true,
                    dateFormat: "Y-m-d H:i",
                    defaultDate: "{{ reclamation.date is defined and reclamation.date ? reclamation.date|date('Y-m-d H:i') : '' }}"
                });
            }

            // Enhance select style if present
            const typeSelect = document.getElementById('reclamation_typereclamation');
            if (typeSelect) {
                typeSelect.classList.add('form-select');
            }
        });
    </script>
{% endblock %}
