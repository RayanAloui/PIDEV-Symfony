{% extends 'front.html.twig' %}

{% block title %}Edit Reponse{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h5 mb-0">Edit Reponse</h1>
                </div>

                <div class="card-body">
                    {{ include('reponse/admin/_form.html.twig', {'button_label': 'Update'}) }}
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">
                    <a href="{{ path('app_reponse_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    {{ include('reponse/admin/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize flatpickr if the input is found
            const dateInput = document.getElementById('reponse_date');
            if (dateInput) {
                flatpickr(dateInput, {
                    enableTime: true,
                    dateFormat: "Y-m-d H:i",
                    defaultDate: "{{ reponse.date is defined and reponse.date ? reponse.date|date('Y-m-d H:i') : '' }}"
                });
            }

            // Apply Bootstrap style to select
            const statutSelect = document.getElementById('reponse_statut');
            if (statutSelect) {
                statutSelect.classList.add('form-select');
            }
        });
    </script>
{% endblock %}
