{% extends 'base.html.twig' %}

{% block title %}Response Details{% endblock %}

{% block body %}
<section class="py-5" style="background-color: #fef9f2;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm" style="background-color: #fff8e1; border: 1px solid #e0d3b8;">
                    <div class="card-header" style="background-color: #e0c097; color: #3e2c1c;">
                        <h5 class="mb-0">Response #{{ reponse.id }}</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">Status: 
                            <span class="badge bg-{{ reponse.statut == 'Resolved' ? 'success' : 'warning' }}">
                                {{ reponse.statut }}
                            </span>
                        </h6>

                        {% if reponse.indice %}
                        <p class="mb-2">
                            <strong>Index:</strong> {{ reponse.indice }}
                        </p>
                        {% endif %}

                        <p class="mb-2">
                            <strong>Description:</strong><br>
                            {{ reponse.description }}
                        </p>
                        <p class="mb-2">
                            <strong>Date:</strong>
                            {{ reponse.date ? reponse.date|date('F j, Y') : 'N/A' }}
                        </p>

                        <div class="mt-4">
                            <a href="{{ path('app_reponse_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_reponse_admin_edit', {'id': reponse.id}) }}" class="btn btn-warning ms-2">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
