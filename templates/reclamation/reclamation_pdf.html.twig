{# PIDEV-Symfony-user/templates/reclamation/reclamation_pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Reclamations Report</title>
    <style>
        body { font-family: Arial, sans-serif; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        h1 { text-align: center; }
    </style>
</head>
<body>
    <h1>Reclamations Report</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
              
                <th>Description</th>
                <th>Type</th>
                <th>Email</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.id }}</td>
                   
                    <td>{{ reclamation.description }}</td>
                    <td>{{ reclamation.typereclamation }}</td>
                    <td>{{ reclamation.mail }}</td>
                    <td>{{ reclamation.date|date('Y-m-d') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No reclamations found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>