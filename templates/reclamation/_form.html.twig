{# templates/reclamation/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    <div class="mb-3">
        {{ form_label(form.mail, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.mail, {'attr': {'class': 'form-control rounded-3'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.mail) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control rounded-3', 'rows': 4}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.typereclamation, 'Type of Reclamation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.typereclamation, {'attr': {'class': 'form-control rounded-3'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.typereclamation) }}
        </div>
    </div>

    <div class="d-grid gap-2 mt-4">
        <button type="submit" class="btn btn-primary btn-lg rounded-pill">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}
