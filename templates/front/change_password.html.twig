{% extends 'Front.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block content1 %}
    <style>
        .profile-container {
            margin: 20px;
            background-color: #1a1a2e;
            padding: 30px;
            border-radius: 8px;
            color: #ffcc00;
            border: 2px solid #5c6bc0;
            box-shadow: 0 0 20px rgba(92, 107, 192, 0.6),
                        0 0 40px rgba(255, 204, 0, 0.3);
            font-family: 'Rajdhani', 'Courier New', sans-serif;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            position: relative;
            overflow: hidden;
        }

        .profile-container::before {
            content: "";
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border: 2px dashed #5c6bc0;
            border-radius: 12px;
            opacity: 0.3;
            pointer-events: none;
        }

        .profile-image-container {
            text-align: center;
            margin-bottom: 25px;
            position: relative;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #ffcc00;
            box-shadow: 0 0 25px rgba(255, 204, 0, 0.7);
            transition: transform 0.3s;
        }

        .profile-image:hover {
            transform: scale(1.05);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #ffcc00;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            background-color: rgba(30, 30, 50, 0.7);
            border: 1px solid #5c6bc0;
            border-radius: 6px;
            color: #ffcc00;
            font-family: 'Courier New', monospace;
            font-size: 16px;
            transition: all 0.3s;
            backdrop-filter: blur(5px);
        }

        .form-control:focus {
            outline: none;
            border-color: #ffcc00;
            box-shadow: 0 0 15px rgba(255, 204, 0, 0.4);
            background-color: rgba(40, 40, 70, 0.9);
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
            gap: 15px;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            font-family: 'Rajdhani', sans-serif;
            font-size: 16px;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            flex: 1;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-update {
            background-color: #5c6bc0;
            color: #fff;
            box-shadow: 0 0 15px rgba(92, 107, 192, 0.7);
        }

        .btn-update:hover {
            background-color: #4a58b0;
            box-shadow: 0 0 25px rgba(92, 107, 192, 0.9);
        }

        .btn-logout {
            background-color: #ffcc00;
            color: #1a1a2e;
            box-shadow: 0 0 15px rgba(255, 204, 0, 0.7);
        }

        .btn-logout:hover {
            background-color: #e6b800;
            box-shadow: 0 0 25px rgba(255, 204, 0, 0.9);
        }

        /* Cyberpunk scanline effect */
        .scanlines {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                to bottom,
                transparent 95%,
                rgba(92, 107, 192, 0.1) 96%,
                transparent 97%
            );
            background-size: 100% 5px;
            pointer-events: none;
            animation: scanline 8s linear infinite;
            z-index: 1;
            opacity: 0.3;
        }

        @keyframes scanline {
            0% { background-position: 0 0; }
            100% { background-position: 0 100%; }
        }

        /* Add this to your head section or include Rajdhani font */
        @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap');
    </style>

    <div class="profile-container">
        <div class="scanlines"></div>
    {% if error %}
        <div style="background-color: #ff4c4c; color: white; padding: 10px; margin-bottom: 20px; border-radius: 5px; font-weight: bold;">
            {{ error }}
        </div>
    {% endif %}

    {% if success %}
        <div style="background-color: #4caf50; color: white; padding: 10px; margin-bottom: 20px; border-radius: 5px; font-weight: bold;">
            {{ success }}
        </div>
    {% endif %}

        <h1>Change Your Password</h1>

        <form method="post">
            <div class="form-group">
                <label for="oldPassword">Old Password</label>
                <input type="password" id="oldPassword" name="oldPassword" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-update">Change Password</button>
                
            </div>
        </form>
    </div>
{% endblock %}
