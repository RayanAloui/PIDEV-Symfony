{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <style>
        h1 {
            font-size: 24px;
            color: #6b3d29;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #f9f9f9;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #6b3d29;
            color: white;
            font-weight: bold;
        }

        .table td {
            background-color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .btn {
            background-color: #6b3d29;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin: 10px;
        }

        .btn:hover {
            background-color: #d29b6a;
        }

        .back-link {
            margin-right: 10px;
        }
    </style>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>IsBlocked</th>
                <td>{{ user.isBlocked == 1 ? 'Blocked' : 'Active' }}</td>
            </tr>
            <tr>
                <th>IsConfirmed</th>
                <td>{{ user.isConfirmed == 1 ? 'Confirmed' : 'Not Confirmed' }}</td>
            </tr>
            <tr>
                <th>NumberVerification</th>
                <td>{{ user.numberVerification }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ user.token }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center;">
        <a href="{{ path('app_user_index') }}" class="btn back-link">Back to list</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn">Edit</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
