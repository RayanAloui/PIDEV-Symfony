{% extends 'base.html.twig' %}

{% block title %}Dashboard Orphelin{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5efe6;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    h1 {
        color: #4a2c2a;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .course-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .course-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .course-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
    }

    .course-card img {
        width: 100%;
        height: 200px; /* Taille plus grande pour mieux voir */
        object-fit: contain; /* Afficher toute lâ€™image sans la rogner */
        border-radius: 12px;
        background-color: white; /* Ajouter un fond blanc pour les images transparentes */
    }

    .course-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #5a3e36;
        margin-top: 10px;
    }

    .btn {
        background-color: #b08968;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
        display: inline-block;
    }

    .btn:hover {
        background-color: #8b5e3c;
    }

    .logout {
        display: block;
        margin-top: 20px;
        text-decoration: none;
        color: #5a3e36;
        font-weight: bold;
    }
</style>


<div class="container">
    <h1>Bienvenue, {{ prenomO }} {{ nomO }} ðŸ‘‹</h1>
    <p>Voici les cours disponibles pour toi :</p>

    {% if cours is empty %}
        <p>Aucun cours disponible pour lâ€™instant.</p>
    {% else %}
        <div class="course-list">
            {% for cour in cours %}
                <div class="course-card">
                    <img src="{{ asset('assets/img/' ~ cour.imageC) }}" alt="Image" width="50">
                    <p class="course-title">{{ cour.titre }}</p>
                    <a href="{{ path('orphelin_cours_details', {'id': cour.idC}) }}" class="btn">Consulter</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <a href="{{ path('orphelin_logout') }}" class="logout">Se dÃ©connecter</a>
</div>
{% endblock %}
