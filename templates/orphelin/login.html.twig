{% extends 'base.html.twig' %}

{% block title %}Connexion Orphelin{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5efe6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        width: 100%;
        max-width: 400px;
    }

    h2 {
        color: #4a2c2a;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        font-weight: 600;
        color: #5a3e36;
        font-size: 1rem;
    }

    input {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .btn {
        background-color: #b08968;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s;
        width: 100%;
    }

    .btn:hover {
        background-color: #8b5e3c;
    }

    .error-message {
        color: red;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }
</style>

<div class="login-container">
    <h2>Connexion Orphelin</h2>

    {% if error %}
        <p class="error-message">{{ error }}</p>
    {% endif %}

    <form method="POST">
        <div class="form-group">
            <label for="nomO">Nom :</label>
            <input type="text" id="nomO" name="nomO" required>
        </div>

        <div class="form-group">
            <label for="prenomO">Prénom :</label>
            <input type="text" id="prenomO" name="prenomO" required>
        </div>

        <div class="form-group">
            <label for="idO">Clé d'accès :</label>
            <input type="text" id="idO" name="idO" required>
        </div>

        <button type="submit" class="btn">Se connecter</button>
    </form>
</div>
{% endblock %}
