{% extends 'front.html.twig' %}

{% block title %}Connexion Orphelin{% endblock %}

{% block body %}
<style> 
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5efe6; /* Beige clair */
        color: #5a3e36; /* Marron foncé */
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        width: 50%;
        max-width: 500px;
        padding: 25px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .login-container h2 {
        color: #4a2c2a;
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .login-container input {
        width: 100%;
        padding: 12px;
        border: 2px solid #d4a373;
        border-radius: 8px;
        font-size: 16px;
        background-color: #fdf8f1;
        transition: all 0.3s ease-in-out;
    }

    .login-container input:focus {
        border-color: #b08968;
        outline: none;
        box-shadow: 0px 0px 5px rgba(176, 137, 104, 0.5);
    }

    .login-container button {
        background-color: #b08968;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
        font-weight: bold;
        margin-top: 10px;
    }

    .login-container button:hover {
        background-color: #8b5e3c;
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
    }
</style>

<a href="{{ path('app_front') }}" class="btn btn-warning"> Acceuil </a>

<div class="login-container">
    <h2>Connexion Orphelin</h2>

    {% if error %}
        <p class="error-message">{{ error }}</p>
    {% endif %}

    <form method="POST">
        <div class="form-group">
            <label for="nomO">Nom :</label>
            <input type="text" id="nomO" name="nomO" required>
        </div>

        <div class="form-group">
            <label for="prenomO">Prénom :</label>
            <input type="text" id="prenomO" name="prenomO" required>
        </div>

        <div class="form-group">
            <label for="idO">Clé d'accès :</label>
            <input type="text" id="idO" name="idO" required>
        </div>

        <button type="submit" class="btn">Se connecter</button>
    </form>
</div>
{% endblock %}
