{% extends 'base.html.twig' %}

{% block title %}Détails du Cours{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5efe6;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 700px;
        margin: auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    h1 {
        color: #4a2c2a;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .course-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .course-content {
        font-size: 1.1rem;
        color: #5a3e36;
        text-align: left;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        color: #5a3e36;
        font-weight: bold;
    }
</style>

<div class="container">
    <h1>{{ cours.titre }}</h1>
    <img src="{{ asset('assets/img/' ~ cours.imageC) }}" alt="Image" width="100">
    <p></p>
    <h1>Contenu</h1>
    <p class="course-content">{{ cours.contenu }}</p>

    <form method="get" action="{{ path('orphelin_cours_details', {id: cours.idC}) }}">
    <input type="hidden" name="tts" value="1">
    <button type="submit" class="btn btn-success mt-3">Lire à haute voix</button>
</form>

{% if audioUrl %}
    <div class="mt-3">
        <h5>Lecture audio :</h5>
        <audio controls>
            <source src="{{ audioUrl }}" type="audio/mpeg">
            Votre navigateur ne prend pas en charge l'audio.
        </audio>
    </div>
{% endif %}

    <h1>Résumé</h1>
    <p class="course-content">{{ cours.resume }}</p>

    <form method="get">
    <button type="submit" name="extract_keywords" value="1" class="btn btn-primary">
        Mots-clés
    </button>
    </form>

    <p></p>

{% if keywords is defined and keywords is not empty %}
    <h3>Mots-clés extraits :</h3>
    <ul>
        {% for keyword in keywords %}
            <li>{{ keyword }}</li>
        {% endfor %}
    </ul>
{% endif %}

    <button id="translateBtn" class="btn btn-primary mt-3">Traduire en anglais</button>

<div id="translatedText" class="mt-3" style="display: none;">
    <h3>Traduction :</h3>
    <p id="translatedContent" style="color: #333;"></p>
</div>

<script>
    document.getElementById('translateBtn').addEventListener('click', function () {
        fetch('', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.translated) {
                document.getElementById('translatedText').style.display = 'block';
                document.getElementById('translatedContent').textContent = data.translated;
            }
        });
    });
</script>



   {# Formulaire de notation #}
   <p></p>
        <h3>Attribuer une note</h3>
        {{ form_start(form) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}

        {# Affichage des évaluations des orphelins #}
        <h3>Évaluations des orphelins</h3>
        <ul>
            {% for rating in ratings %}
                <li>
                    <strong>{{ rating.orphelin.nomO }} {{ rating.orphelin.prenomO }} :</strong>
                    <span>{{ rating.note }} étoiles</span>
                </li>
            {% endfor %}
        </ul>

        <a href="{{ path('orphelin_dashboard') }}" class="back-link">← Retour aux cours</a>
</div>
{% endblock %}
