<body>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5efe6;
            color: #5a3e36;
            margin: 0;
            padding: 2rem;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 1000px;
            padding: 40px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin: 2rem auto;
            text-align: left;
        }

        h1 {
            color: #3D2B1F;
            font-size: 2.75rem;
            margin-bottom: 2rem;
            font-weight: 700;
            border-bottom: 3px solid #b08968;
            padding-bottom: 1rem;
        }

        .detail-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #fffaf5;
            border-radius: 10px;
            transition: transform 0.2s ease;
        }

        .detail-section:hover {
            transform: translateX(5px);
        }

        label {
            font-weight: 600;
            color: #6b4f47;
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        label strong {
            color: #b08968;
        }

        p {
            font-size: 1.1rem;
            color: #4a2c2a;
            line-height: 1.6;
            margin: 0;
            padding-left: 1.5rem;
        }

        .btn {
            background-color: #b08968;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn:hover {
            background-color: #8b5e3c;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 94, 60, 0.3);
        }

        .img-container {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            max-width: 200px;
            margin: 1rem 0;
        }

        .img-container img {
            width: 100%;
            height: auto;
            display: block;
        }

        .tutor-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: #f8f4f0;
            border-radius: 8px;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .container {
                width: 95%;
                padding: 25px;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            p {
                font-size: 1rem;
            }
        }
    </style>

    <div class="container">
        <h1>{{ cours.titre }}</h1>

        <div class="detail-section">
            <label><strong>Contenu du cours</strong></label>
            <p>{{ cours.contenu }}</p>
        </div>

        <div class="detail-section">
            <label><strong>Résumé</strong></label>
            <p>{{ cours.resume }}</p>
        </div>

        <div class="detail-section">
            <label><strong>Tuteur</strong></label>
            <div class="tutor-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#b08968">
                    <path d="M12 2a5 5 0 1 0 5 5 5 5 0 0 0-5-5zm0 8a3 3 0 1 1 3-3 3 3 0 0 1-3 3zm9 11v-1a7 7 0 0 0-7-7h-4a7 7 0 0 0-7 7v1h2v-1a5 5 0 0 1 5-5h4a5 5 0 0 1 5 5v1z"/>
                </svg>
                <p>{{ cours.tuteur.nomT }} {{ cours.tuteur.prenomT }}</p>
            </div>
        </div>

        {% if cours.imageC %}
        <div class="detail-section">
            <label><strong>Illustration</strong></label>
            <div class="img-container">
                <img src="{{ asset('assets/img/' ~ cours.imageC) }}" alt="Image du cours">
            </div>
        </div>
        {% endif %}

        <div style="text-align: center; margin-top: 3rem;">
            <a href="{{ path('app_crud_cours') }}" class="btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="white">
                    <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
</body>