<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5efe6; /* Beige clair */
        color: #5a3e36; /* Marron foncé */
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #4a2c2a;
        font-size: 32px;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-warning {
        background-color: #d4a373; /* Marron clair */
        color: white;
    }

    .btn-warning:hover {
        background-color: #b08968;
    }

    .btn-danger {
        background-color: #a23e48;
        color: white;
    }

    .btn-danger:hover {
        background-color: #822727;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    table th, table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    table th {
        background-color: #8d6c5b; /* Marron doux */
        color: white;
    }

    table tr:nth-child(even) {
        background-color: #f5efe6;
    }

    table tr:hover {
        background-color: #e6d5c7;
        transition: 0.3s;
    }

    .actions {
        display: flex;
        gap: 10px;
    }

    .no-data {
        text-align: center;
        padding: 15px;
        color: #b08968;
    }
</style>

<body>
<div class="container">
    <h1>Liste des Cours</h1>
    <a href="{{ path('app_crud_cours_add') }}" class="btn btn-primary mb-3">Ajouter un Cours</a>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Tuteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cour in cours %}
                <tr>
                    <td>
                        {% if cour.imageC %}
                            <img src="{{ asset('assets/img/' ~ cour.imageC) }}" alt="Image" width="50">
                        {% else %}
                            <img src="{{ asset('assets/img/default.jpg') }}" alt="Image par défaut" width="50">
                        {% endif %}
                    </td>
                    <td>{{ cour.titre }}</td>
                    <td>{{ cour.contenu|slice(0, 50) }}...</td>
                    <td>
                       {% if cour.tuteur %}
                           {{ cour.tuteur.nomT }} {{ cour.tuteur.prenomT }}
                       {% else %}
                            Aucun tuteur
                       {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_crud_cours_voir', {'id': cour.idC}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_crud_cours_edit', {'id': cour.idC}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_crud_cours_delete', {'id': cour.idC}) }}" class="btn btn-danger btn-sm" 
                             onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun cours disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</body>

