{% extends 'base.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <style>
        h1 {
            font-size: 24px;
            color: #6b3d29;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #f9f9f9;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #6b3d29;
            color: white;
            font-weight: bold;
        }

        .table td {
            background-color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .btn {
            background-color: #6b3d29;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin: 10px;
        }

        .btn:hover {
            background-color: #d29b6a;
        }

        .back-link {
            margin-right: 10px;
        }
    </style>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ activite.categorie }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ activite.duree }}</td>
            </tr>
            <tr>
                <th>Nom du Tuteur</th>
                <td>{{ activite.nom_du_tuteur }}</td>
            </tr>
            <tr>
                <th>Date de l'Activité</th>
                <td>{{ activite.date_activite ? activite.date_activite|date('Y-m-d H:i') : 'Non définie' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ activite.lieu }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ activite.statut }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center;">
        <a href="{{ path('app_activite_index') }}" class="btn back-link">Retour à la liste</a>
        <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn">Modifier</a>
    </div>

    {{ include('activite/_delete_form.html.twig') }}
{% endblock %}
