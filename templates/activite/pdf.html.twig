{# templates/activite/pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Détails de l'activité</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }
        .header h1 {
            color: #2c3e50;
            margin-bottom: 5px;
        }
        .content {
            margin-bottom: 30px;
        }
        .section {
            margin-bottom: 20px;
        }
        .section h2 {
            color: #3498db;
            border-bottom: 1px solid #eee;
            padding-bottom: 5px;
        }
        .info-row {
            margin-bottom: 10px;
        }
        .label {
            font-weight: bold;
            margin-right: 10px;
        }
        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 12px;
            color: #7f8c8d;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ activite.nom }}</h1>
        <p>Fiche détaillée de l'activité</p>
    </div>
    
    <div class="content">
        <div class="section">
            <h2>Informations générales</h2>
            <div class="info-row">
                <span class="label">Catégorie:</span> {{ activite.categorie }}
            </div>
            <div class="info-row">
                <span class="label">Statut:</span> {{ activite.statut }}
            </div>
            <div class="info-row">
                <span class="label">Lieu:</span> {{ activite.lieu }}
            </div>
            <div class="info-row">
                <span class="label">Durée:</span> {{ activite.duree }} heures
            </div>
        </div>
        
        <div class="section">
            <h2>Encadrement</h2>
            <div class="info-row">
                <span class="label">Tuteur:</span> {{ activite.nomDuTuteur }}
            </div>
            <div class="info-row">
                <span class="label">Email du tuteur:</span> {{ activite.emailDuTuteur }}
            </div>
        </div>
        
        <div class="section">
            <h2>Description</h2>
            <p>{{ activite.description }}</p>
        </div>
    </div>
    
    <div class="footer">
        <p>Document généré le {{ "now"|date("d/m/Y") }}</p>
        <p>© {{ "now"|date("Y") }} - Votre organisation</p>
    </div>
</body>
</html>